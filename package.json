{
  "name": "otel-ui",
  "private": true,
  "version": "1.0.82",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\"",
    "lint:sh": "if [ \"$CI\" = \"true\" ]; then shellcheck *.sh; else shellcheck *.sh || echo '⚠️  Warning: shellcheck reported issues'; fi",
    "lint:all": "npm run lint && npm run lint:md && npm run lint:sh",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\" \"**/*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\" \"**/*.md\"",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "playwright test",
    "test:prod": "playwright test --config=playwright.config.prod.ts",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "prepare": "husky"
  },
  "dependencies": {
    "@opentelemetry/context-zone": "^2.5.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.211.0",
    "@opentelemetry/instrumentation-fetch": "^0.211.0",
    "@opentelemetry/instrumentation-xml-http-request": "^0.211.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-trace-web": "^2.5.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@stuartshay/otel-types": "^1.0.64",
    "axios": "^1.13.2",
    "oidc-client-ts": "^3.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ]
  }
}
